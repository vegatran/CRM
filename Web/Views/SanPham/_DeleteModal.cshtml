@model Domain.Entities.SanPham

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>
                <div class="alert alert-warning">
                    <strong>Sản phẩm:</strong> @Model.TenSanPham<br />
                    <strong>Mã sản phẩm:</strong> @Model.MaSanPham<br />
                    <strong>Giá bán:</strong> @Model.GiaBan.ToString("N0") VNĐ
                </div>
                <p class="text-danger"><small>Hành động này không thể hoàn tác!</small></p>
            </div>
            <form id="deleteForm" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary modal-close-btn">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 