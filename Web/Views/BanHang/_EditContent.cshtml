@model Domain.Entities.PhieuBanHang

<form id="banHangEditForm">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="KhachHangId">Khách hàng <span class="text-danger">*</span></label>
                <select class="form-control" id="KhachHangId" name="KhachHangId" required>
                    <option value="">-- Chọn khách hàng --</option>
                    @foreach (var khachHang in ViewBag.KhachHangs)
                    {
                        if (khachHang.Id == Model.KhachHangId)
                        {
                            <option value="@khachHang.Id" selected>@khachHang.TenKhachHang</option>
                        }
                        else
                        {
                            <option value="@khachHang.Id">@khachHang.TenKhachHang</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="NgayBan">Ngày bán <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="NgayBan" name="NgayBan" value="@Model.NgayBan.ToString("yyyy-MM-dd")" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="GiamGia">Giảm giá</label>
                <input type="text" class="form-control" id="GiamGia" name="GiamGia" value="@Model.GiamGia" placeholder="0" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="GhiChu">Ghi chú</label>
                <textarea class="form-control" id="GhiChu" name="GhiChu" rows="3">@Model.GhiChu</textarea>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-12">
            <h5>Chi tiết bán hàng</h5>
            <div id="chiTietContainer">
                @if (Model.ChiTietBanHangs != null && Model.ChiTietBanHangs.Any())
                {
                    foreach (var chiTiet in Model.ChiTietBanHangs)
                    {
                        <div class="chi-tiet-item row">
                            <input type="hidden" class="chi-tiet-id" value="@chiTiet.Id" />
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Sản phẩm <span class="text-danger">*</span></label>
                                    <select class="form-control san-pham" required>
                                        <option value="">-- Chọn sản phẩm --</option>
                                        @foreach (var sanPham in ViewBag.SanPhams)
                                        {
                                            if (sanPham.Id == chiTiet.SanPhamId)
                                            {
                                                <option value="@sanPham.Id" data-don-gia="@sanPham.GiaBan" selected>@sanPham.TenSanPham</option>
                                            }
                                            else
                                            {
                                                <option value="@sanPham.Id" data-don-gia="@sanPham.GiaBan">@sanPham.TenSanPham</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Số lượng <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control so-luong" min="1" value="@chiTiet.SoLuong" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Đơn giá <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control don-gia" value="@chiTiet.DonGia.ToString("N0")" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Thành tiền</label>
                                    <input type="text" class="form-control thanh-tien" value="@chiTiet.ThanhTien.ToString("N0")" readonly />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-danger btn-block" data-action="remove-chi-tiet">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="chi-tiet-item row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Sản phẩm <span class="text-danger">*</span></label>
                                <select class="form-control san-pham" required>
                                    <option value="">-- Chọn sản phẩm --</option>
                                    @foreach (var sanPham in ViewBag.SanPhams)
                                    {
                                        <option value="@sanPham.Id" data-don-gia="@sanPham.GiaBan">@sanPham.TenSanPham</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Số lượng <span class="text-danger">*</span></label>
                                <input type="number" class="form-control so-luong" min="1" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Đơn giá <span class="text-danger">*</span></label>
                                <input type="text" class="form-control don-gia" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Thành tiền</label>
                                <input type="text" class="form-control thanh-tien" readonly />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-danger btn-block" data-action="remove-chi-tiet">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button type="button" class="btn btn-success" data-action="add-chi-tiet">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </button>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Tổng tiền</label>
                <input type="text" class="form-control" id="tongTien" value="@Model.TongTien.ToString("N0")" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Thanh toán</label>
                <input type="text" class="form-control" id="thanhToan" value="@Model.ThanhToan.ToString("N0")" readonly />
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form>
