@model Domain.Entities.DinhMucNguyenLieu

<div class="modal fade" id="deleteDinhMucModal" tabindex="-1" role="dialog" aria-labelledby="deleteDinhMucModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDinhMucModalLabel">
                    <i class="fas fa-trash text-danger"></i> Xác nhận xóa
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa định mức nguyên liệu này không?</p>
                <div class="alert alert-warning">
                    <strong>Sản phẩm:</strong> @Model.SanPham?.TenSanPham<br />
                    <strong>Nguyên liệu:</strong> @Model.NguyenLieu?.TenNguyenLieu<br />
                    <strong>Số lượng:</strong> @Model.SoLuongCan @Model.DonViTinh
                </div>
                <p class="text-danger"><small>Hành động này không thể hoàn tác!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <form id="deleteDinhMucForm" asp-action="Delete" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div> 