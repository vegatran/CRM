@model Domain.Entities.DinhMucNguyenLieu

<div class="modal-header">
    <h5 class="modal-title" id="deleteDinhMucModalLabel">
        <i class="fas fa-trash"></i> Xóa định mức nguyên liệu
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form id="deleteDinhMucForm" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="modal-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa định mức nguyên liệu này không?
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Sản phẩm:</label>
                    <p class="form-control-static">@Model.SanPham?.MaSanPham - @Model.SanPham?.TenSanPham</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Nguyên liệu:</label>
                    <p class="form-control-static">@Model.NguyenLieu?.MaNguyenLieu - @Model.NguyenLieu?.TenNguyenLieu</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Số lượng cần:</label>
                    <p class="form-control-static">@Model.SoLuongCan.ToString("0.00") @Model.DonViTinh</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Đơn giá:</label>
                    <p class="form-control-static">@((Model.NguyenLieu?.GiaNhap ?? 0).ToString("N0")) VNĐ</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Thành tiền:</label>
                    <p class="form-control-static"><strong>@((Model.SoLuongCan * (Model.NguyenLieu?.GiaNhap ?? 0)).ToString("N0")) VNĐ</strong></p>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.GhiChu))
        {
            <div class="form-group">
                <label class="control-label">Ghi chú:</label>
                <p class="form-control-static">@Model.GhiChu</p>
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <i class="fas fa-times"></i> Hủy
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </button>
    </div>
</form> 