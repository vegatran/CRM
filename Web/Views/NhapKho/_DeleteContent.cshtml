@model Domain.Entities.PhieuNhapKho

<div class="text-center">
    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
    <h4 class="mt-3">Xác nhận xóa phiếu nhập kho</h4>
    <p class="text-muted">Bạn có chắc chắn muốn xóa phiếu nhập kho này không?</p>
</div>

<div class="card">
    <div class="card-header">
        <h6 class="card-title mb-0">Thông tin phiếu nhập kho</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Số phiếu:</strong> @Model.SoPhieu</p>
                <p><strong>Ngày nhập:</strong> @Model.NgayNhap.ToString("dd/MM/yyyy")</p>
                <p><strong>Nhà cung cấp:</strong> @Model.NhaCungCap?.TenNhaCungCap</p>
            </div>
            <div class="col-md-6">
                <p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") VNĐ</p>
                <p><strong>Trạng thái:</strong> 
                    @if (Model.TrangThai == "Đã xử lý")
                    {
                        <span class="badge badge-success">@Model.TrangThai</span>
                    }
                    else if (Model.TrangThai == "Chờ xử lý")
                    {
                        <span class="badge badge-warning">@Model.TrangThai</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">@Model.TrangThai</span>
                    }
                </p>
                <p><strong>Ghi chú:</strong> @(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</p>
            </div>
        </div>
        
        @if (Model.ChiTietNhapKhos != null && Model.ChiTietNhapKhos.Any())
        {
            <hr />
            <h6>Chi tiết nhập kho:</h6>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Loại hàng</th>
                            <th>Hàng hóa</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var chiTiet in Model.ChiTietNhapKhos)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>
                                    @if (chiTiet.NguyenLieuId.HasValue)
                                    {
                                        <span class="badge badge-info">Nguyên liệu</span>
                                    }
                                    else if (chiTiet.SanPhamId.HasValue)
                                    {
                                        <span class="badge badge-primary">Sản phẩm</span>
                                    }
                                </td>
                                <td>
                                    @if (chiTiet.NguyenLieuId.HasValue && chiTiet.NguyenLieu != null)
                                    {
                                        @chiTiet.NguyenLieu.TenNguyenLieu
                                    }
                                    else if (chiTiet.SanPhamId.HasValue && chiTiet.SanPham != null)
                                    {
                                        @chiTiet.SanPham.TenSanPham
                                    }
                                </td>
                                <td>@chiTiet.SoLuong.ToString("N0")</td>
                                <td>@chiTiet.DonGia.ToString("N0") VNĐ</td>
                                <td>@chiTiet.ThanhTien.ToString("N0") VNĐ</td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="text-center mt-3">
    <button type="button" class="btn btn-danger" onclick="deleteNhapKho(@Model.Id)">
        <i class="fas fa-trash"></i> Xác nhận xóa
    </button>
    <button type="button" class="btn btn-secondary ml-2" data-dismiss="modal">
        <i class="fas fa-times"></i> Hủy
    </button>
</div>
