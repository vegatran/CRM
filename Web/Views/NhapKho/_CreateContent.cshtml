@model Domain.Entities.PhieuNhapKho

<form id="nhapKhoForm" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NhaCungCapId" class="control-label">Nhà cung cấp <span class="text-danger">*</span></label>
                <select asp-for="NhaCungCapId" class="form-control" required>
                    <option value="">-- Chọn nhà cung cấp --</option>
                    @foreach (var ncc in ViewBag.NhaCungCaps)
                    {
                        <option value="@ncc.Id">@ncc.TenNhaCungCap</option>
                    }
                </select>
                <span asp-validation-for="NhaCungCapId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NgayNhap" class="control-label">Ngày nhập <span class="text-danger">*</span></label>
                <input asp-for="NgayNhap" class="form-control" type="date" required />
                <span asp-validation-for="NgayNhap" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <hr />

    <h5><i class="fas fa-list"></i> Chi tiết nhập kho</h5>
    <div id="chiTietContainer">
        <div class="chi-tiet-item border p-3 mb-3">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Loại hàng</label>
                        <select class="form-control loai-hang">
                            <option value="">-- Chọn loại hàng --</option>
                            <option value="nguyenlieu">Nguyên liệu</option>
                            <option value="sanpham">Sản phẩm</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Hàng hóa</label>
                        <select class="form-control hang-hoa" disabled>
                            <option value="">-- Chọn hàng hóa --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Số lượng</label>
                        <input type="number" class="form-control so-luong" min="1" value="1" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Đơn giá</label>
                        <input type="text" class="form-control don-gia" placeholder="0" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Thành tiền</label>
                        <input type="text" class="form-control thanh-tien" readonly />
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-danger btn-sm mt-2" data-action="remove-chi-tiet">
                <i class="fas fa-trash"></i> Xóa
            </button>
        </div>
    </div>

    <button type="button" class="btn btn-info btn-sm" data-action="add-chi-tiet">
        <i class="fas fa-plus"></i> Thêm chi tiết
    </button>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label"><strong>Tổng tiền:</strong></label>
                <input type="text" id="tongTien" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Lưu phiếu nhập kho
        </button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <i class="fas fa-times"></i> Hủy
        </button>
    </div>
</form>
